<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="wyqj.cancerprevent.doctorversion.activity.mine.MyIncomeActivity">


    <!--我的收入-->
    <LinearLayout
        android:id="@+id/rl_mine_income"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_myincome_now_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="0"
            android:textColor="@color/money_color"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/tv_myincome_nowtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收入   (元)"
            android:textColor="@color/text_hint"
            android:textSize="14sp"/>

    </LinearLayout>


    <View
        style="@style/cutlint"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/rl_myincome_howtodo"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="如何创收"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_mine_arrow" />


    </RelativeLayout>

    <View
        style="@style/cutlint"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/rl_myincome_record"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_mine_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收入/提现记录"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        style="@style/cutlint"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/rl_myinvite_record"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_mine_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邀请医生记录"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

    </RelativeLayout>
    <View style="@style/cutlint" />

    <Button
        android:id="@+id/btn_myincome_takemoney"
        style="@style/btn_registerandlogin"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_confirm"
        android:text="申请提现"
        android:textSize="17sp" />


</LinearLayout>

