<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="#f1f1f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_consult_goodat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_consult_goodat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textColor="@drawable/selector_textcolor"
                android:text="擅长病种"/>

            <ImageView
                android:id="@+id/iv_consult_goodarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_consult_goodat"
                android:src="@drawable/selector_consult_arrow"/>
        </RelativeLayout>

        <View
           style="@style/vertical_line"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:background="#757474"/>

        <RelativeLayout
            android:id="@+id/rl_consult_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tv_consult_newquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_textcolor"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="最新提问"/>

            <ImageView
                android:id="@+id/iv_consult_questionarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_consult_newquestion"
                android:src="@drawable/selector_consult_arrow"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e2e2e2"/>
</RelativeLayout>