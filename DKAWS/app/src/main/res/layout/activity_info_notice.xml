<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="wyqj.cancerprevent.doctorversion.activity.mine.InfoNoticeActivity">

  

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15sp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_notice_sixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="私信的新消息通知"
            android:textColor="@color/text_common"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_notice_sixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/selector_infonotice" />

        <View
            style="@style/horizontal_line"
            android:layout_alignLeft="@+id/txt_notice_sixin"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_notice_patientapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="患者的申请提醒"
            android:textColor="@color/text_common"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_notice_patientapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/selector_infonotice" />

        <View
            style="@style/horizontal_line"
            android:layout_alignLeft="@+id/txt_notice_patientapply"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="患者追问的消息通知"
            android:textColor="@color/text_common"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_notice_patientquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/selector_infonotice" />

    </RelativeLayout>


</LinearLayout>

