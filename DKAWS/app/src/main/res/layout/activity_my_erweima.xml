<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg"
            android:scrollbars="none"
            tools:context="wyqj.cancerprevent.doctorversion.activity.mine.MyErweimaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:id="@+id/rl_erweima_myinfo"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="@color/white">
                <!--头像-->
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_erweima_touxiang"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>
                <!--信息-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_erweima_touxiang"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_erweima_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_common"
                            android:textSize="17sp"/>

                        <TextView
                            android:id="@+id/tv_erweima_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/text_common"
                            android:textSize="17sp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_mine_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_erweima_name"
                        android:layout_below="@+id/tv_erweima_grade"
                        android:textColor="@color/tip_color"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_erweima_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/tip_color"
                        android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>

            <View style="@style/horizontal_line"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="31dp"
                android:background="@color/but_bg"
                android:padding="5dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_erweima_myerweima"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/default_pic"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="温馨提示："
            android:textColor="@color/but_bg"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_erweima_myerweima"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/erweima_note"
            android:textColor="@color/tip_color"
            android:textSize="14sp"/>
    </LinearLayout>

</ScrollView>

