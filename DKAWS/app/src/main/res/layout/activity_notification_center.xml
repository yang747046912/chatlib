<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_margin"
    tools:context=".activity.mine.NotificationCenterActivity">

    <com.kaws.lib.xrecyclerview.XRecyclerView
        android:id="@+id/xrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none" />

    <com.kaws.lib.common.widget.BlankView
        android:id="@+id/blank_view_notification"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:text="暂无消息">

    </com.kaws.lib.common.widget.BlankView>

</RelativeLayout>
