<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <View
        android:id="@+id/cutline"
        style="@style/cutlint"
        android:layout_height="10dp"
        android:background="@color/bg_margin"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/oval"/>

    <RelativeLayout
        android:id="@+id/item_timeline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cutline"
        android:layout_marginLeft="26dp"
        android:background="@color/white"
        android:paddingTop="15dp"
        >

        <TextView
            android:id="@+id/time_item_timeline_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"
            android:textColor="@color/txt_hint"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/content_item_timeline_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/time_item_timeline_others"
            android:layout_below="@+id/time_item_timeline_others"
            android:layout_marginTop="12dp"
            android:text="------"
            android:textColor="@color/theme_color"/>

        <com.kaws.lib.common.widget.MyGridView
            android:id="@+id/gdv_item_timeline_others"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/content_item_timeline_others"
            android:layout_marginTop="9dp"
            android:paddingRight="20dp"
            android:horizontalSpacing="5dp"
            android:listSelector="@null"
            android:numColumns="3"
            android:verticalSpacing="5dp"/>
    </RelativeLayout>

    <View
        style="@style/cutlint"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/item_timeline"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        />
</RelativeLayout>