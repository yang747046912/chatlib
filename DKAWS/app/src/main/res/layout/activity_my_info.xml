<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_myinfo_touxiang"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">


                <TextView
                    style="@style/myinfo_text"
                    android:layout_gravity="center_vertical"
                    android:text="头像"/>

                <View
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_myinfo_touxiang"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:actualImageScaleType="centerCrop"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_mine_arrow"/>
            </LinearLayout>

            <!--<View
                style="@style/horizontal_line"
                android:layout_marginLeft="17dp"/>-->

            <LinearLayout
                android:id="@+id/ll_myinfo_xingming"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/myinfo_text"
                        android:text="姓名"/>

                    <TextView
                        android:id="@+id/tv_myinfo_username"
                        style="@style/myinfo_righttext"
                        android:layout_toRightOf="@+id/txt_name"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:paddingLeft="8dp"
                        android:singleLine="true"/>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_mine_arrow"/>
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="17dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#fff"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">

                <TextView
                    style="@style/myinfo_text"
                    android:text="邀请码"/>

                <TextView
                    android:id="@+id/tv_myinfo_verifycode"
                    style="@style/myinfo_righttext"
                    android:textColor="@color/text_hint"/>

            </RelativeLayout>

            <!--<View style="@style/horizontal_line"/>-->

            <!--<View
                style="@style/horizontal_line"
                android:layout_marginTop="15dp"/>-->

            <LinearLayout
                android:id="@+id/ll_myinfo_yiyuan"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_hosiptal"
                        style="@style/myinfo_text"
                        android:text="所在医院"/>

                    <TextView
                        android:id="@+id/tv_myinfo_hospital"
                        style="@style/myinfo_righttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_hosiptal"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:paddingLeft="8dp"
                        android:singleLine="true"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_mine_arrow"/>
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="17dp"/>

            <LinearLayout
                android:id="@+id/ll_myinfo_keshi"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_office"
                        style="@style/myinfo_text"
                        android:text="所在科室"/>

                    <TextView
                        android:id="@+id/tv_myinfo_office"
                        style="@style/myinfo_righttext"
                        android:layout_toRightOf="@+id/txt_office"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:paddingLeft="8dp"
                        android:singleLine="true"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_mine_arrow"/>
            </LinearLayout>

            <View
                android:id="@+id/view_myinfo_keshi_line"
                style="@style/horizontal_line"
                android:layout_marginLeft="17dp"/>

            <LinearLayout
                android:id="@+id/ll_myinfo_zhichen"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">

                <TextView
                    style="@style/myinfo_text"
                    android:text="选择职称"/>

                <View
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_myinfo_grade"
                    style="@style/myinfo_righttext"
                    android:textColor="@color/text_hint"/>

                <!-- <ImageView
                     android:id="@+id/iv_myinfo_rightarrow5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_gravity="center_vertical"
                     android:paddingLeft="10dp"
                     android:src="@drawable/icon_mine_arrow"/>-->

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="17dp"/>

            <LinearLayout
                android:id="@+id/ll_myinfo_bingzhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gooddisease"
                        style="@style/myinfo_text"
                        android:text="擅长病种"/>

                    <TextView
                        android:id="@+id/tv_myinfo_gooddisease"
                        style="@style/myinfo_righttext"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_gooddisease"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="2"
                        android:paddingBottom="15dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="15dp"
                        android:singleLine="false"/>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_mine_arrow"/>
            </LinearLayout>

            <!--<View style="@style/horizontal_line"/>-->

            <RelativeLayout
                android:id="@+id/rl_myinfo_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                >

                <TextView
                    android:id="@+id/txt_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="个人简介"
                    android:textColor="@color/text_hint"
                    android:textSize="17sp"
                    />

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_mine_arrow"/>

                <TextView
                    android:id="@+id/txt_myinfo_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_jianjie"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:lineSpacingExtra="8sp"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="@color/text_mine_service"
                    android:textSize="17sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_myinfo_zhichen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                >

                <TextView
                    android:id="@+id/txt_zhicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="备注"
                    android:textColor="@color/text_mine_service"
                    android:textSize="17sp"
                    />

                <ImageView
                    android:id="@+id/iv_myinfo_rightarrow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icon_mine_arrow"/>

                <TextView
                    android:id="@+id/txt_myinfo_grade_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_zhicheng"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:text="请输入您要修改的职称"
                    android:lineSpacingExtra="8sp"
                    android:maxLines="3"
                    android:textColor="@color/text_hint"
                    android:textColorHint="@color/text_hint"
                    android:textSize="17sp"/>
            </RelativeLayout>

            <com.kaws.lib.common.widget.JustifyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/myinfo_bottomdeclare"/>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f8f8f7"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_myinfo_tel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_confirm"
            android:text="申请修改资料"
            android:textColor="#fff"
            android:textSize="18dp"/>
    </RelativeLayout>
</RelativeLayout>

