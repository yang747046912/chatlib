<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@color/white"
              android:minHeight="100dp"
              android:orientation="vertical"
              android:paddingLeft="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="38dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shape_money"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_consult_square_money"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="3dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <TextView

                    android:layout_width="20dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="元"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_consult_square_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="11dp"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:maxLines="2"
                android:text="--"
                android:textColor="#333333"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_consult_square_touxiang"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/tv_item_consult_square_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="--"
                    android:textColor="#999999"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="7dp"
                    android:background="#e0e0e0"/>

                <TextView
                    android:id="@+id/tv_item_consult_square_kindofdisease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_tag"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="--"
                    android:textColor="@color/but_bg"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_consult_square_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    android:text="xx钟前"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_alignParentBottom="true"/>
</LinearLayout>