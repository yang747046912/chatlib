<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="wyqj.cancerprevent.doctorversion.activity.register.RegisterSuccessActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/register_title_image"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_register_sucess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="94dp"
                    android:src="@drawable/zhucechenggong2x_v1_2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_registersuccess_dialogtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_title_image"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="32dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="@string/register_success"
                android:textColor="@color/text_gray1"
                android:textSize="17sp"/>

            <Button
                android:id="@+id/btn_registersuccess_next"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/tv_registersuccess_dialogtext"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="32dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_confirm"
                android:text="去上传认证信息"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_registersuccess_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btn_registersuccess_next"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="暂时跳过"
                android:textColor="#2bb8ed"
                android:textSize="15sp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

