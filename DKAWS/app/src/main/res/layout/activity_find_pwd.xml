<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_backgrand"
    tools:context="wyqj.cancerprevent.doctorversion.activity.FindPwdActivity">

    <LinearLayout
        android:id="@+id/ll_forgetpass_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView style="@style/cutlint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_forgetpwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@color/white"
                android:hint="请输入注册的手机号"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="@color/text_hint"
                android:textSize="17sp"/>

            <TextView style="@style/verticality" />
            <TextView
                android:id="@+id/tv_forgetpwd_verifycode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:text="获取验证码"
                android:textColor="#3fc5a5"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView style="@style/cutlint"/>

        <EditText
            android:id="@+id/et_forgetpwd_verifycode"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:paddingLeft="17dp"
            android:background="#fff"
            android:hint="请输入6位手机验证码"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"/>

        <TextView style="@style/cutlint"/>

        <TextView
            style="@style/cutlint"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/et_forgetpwd_newpwd"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:paddingLeft="17dp"
            android:background="#fff"
            android:hint="请输入新的6-16为密码"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"/>

        <TextView style="@style/cutlint"/>

        <EditText
            android:id="@+id/et_forgetpwd_verifypwd"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginLeft="17dp"
            android:background="#fff"
            android:hint="请输入确认的新密码"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"/>

        <TextView style="@style/cutlint"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_forgetpwd_confirm"
        style="@style/btn_registerandlogin"
        android:layout_below="@+id/ll_forgetpass_info"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_confirm"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="17sp"/>

</RelativeLayout>
