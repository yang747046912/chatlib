<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="wyqj.cancerprevent.doctorversion.activity.mine.ApplyWithdrawActivity">

    <View style="@style/cutlint"/>

    <!--卡号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="卡号"
            android:textColor="@color/main_content"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_add_bankcard_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入您的银行卡号"
            android:inputType="number"
            android:textColor="@color/sub_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"/>

    </LinearLayout>

    <View style="@style/cutlint"/>

    <!--银行-->
    <RelativeLayout
        android:id="@+id/rl_add_bankcard_bank"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_bankcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="银行"
                android:textColor="@color/main_content"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_select_bankcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_bankcard"
                android:hint="选择发卡银行"
                android:textColor="@color/sub_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="17sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_add_bankcard_bankicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/bank_gongshang"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/img_add_bankcard_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/icon_mine_arrow"/>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/cutlint"/>

    <!--姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="姓名"
            android:textColor="@color/main_content"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_add_bankcard_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入开户姓名"
            android:singleLine="true"
            android:textColor="@color/sub_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"/>

    </LinearLayout>

    <View style="@style/cutlint"/>

    <!--支行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="支行"
            android:textColor="@color/main_content"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_add_bankcard_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入开户城市及支行信息"
            android:maxLines="2"
            android:textColor="@color/sub_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"/>

    </LinearLayout>

    <View style="@style/cutlint"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_bankcard_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请仔细核对您的银行卡相关信息，如有疑问联系客服电话：400-101-1510"
            android:textColor="@color/tips_color"
            android:textSize="14sp"
            />

        <!--号码链接-->
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="400-101-1510"
            android:textColor="@color/sub_blue"
            android:textSize="14sp"/>-->

    </LinearLayout>

    <Button
        android:id="@+id/btn_ensure_add_bankcard"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_ensure_add_selector"
        android:text="确定添加"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>
