<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="wyqj.cancerprevent.doctorversion.activity.mine.ApplyWithdrawActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.kaws.lib.common.widget.JustifyTextView
            android:id="@+id/tv_apply_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请仔细填写您的申请提现信息，我们会在次月15号统一处理您的提现申请，如有疑问联系客服电话: "
            android:textColor="@color/tips_color"
            android:textSize="14sp"
            android:paddingBottom="2dp"
            />

        <TextView
            android:id="@+id/txt_money_apply_withdraw_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="400-101-1510"
            android:textColor="@color/edt_modifing"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现的收入余额"
            android:textColor="@color/tips_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_money_apply_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="---"
            android:textColor="@color/tips_color"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/tips_color"
            android:textSize="14sp"/>

    </LinearLayout>

    <View style="@style/cutlint"/>

    <!--金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="17dp"
        android:paddingTop="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textColor="@color/main_content"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/edt_submit_apply_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:hint="请输入提现金额"
            android:inputType="number"
            android:textColor="@color/money_color"
            android:textColorHint="@color/text_hint"
            android:textSize="17sp"
            />

    </LinearLayout>

    <View style="@style/cutlint"/>

    <!--设置您的银行卡提现账号-->
    <LinearLayout
        android:id="@+id/ll_ensure_addbank"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#fff"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_takemoney_account"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/mine_myincome_takemoney"/>

        <TextView
            style="@style/mime_myincome_takemoney"
            android:text="设置您的银行卡提现账号"
            />
    </LinearLayout>


    <!--银行卡信息-->
    <RelativeLayout
        android:id="@+id/rl_takemoney_bankinfo"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_bank_icon"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:padding="17dp"
            android:src="@mipmap/bank_gongshang"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/iv_bank_icon"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_bank_name"
                style="@style/mime_myincome_takemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="工商银行"
                />

            <TextView
                android:id="@+id/tv_bank_number"
                style="@style/mime_myincome_takemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="**** **** **** **** 888"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_mine_arrow"/>
    </RelativeLayout>

    <View style="@style/cutlint"/>

    <Button
        android:id="@+id/btn_submit_apply_withdraw"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_ensure_add_selector"
        android:text="确定提现"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>
